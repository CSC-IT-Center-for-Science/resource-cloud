[program:{{ application_name }}-worker]
command = {{ virtualenv_path }}/bin/celery worker -A pouta_blueprints.tasks --loglevel={{ 'DEBUG' if deploy_mode == 'devel' else 'INFO' }}
directory = {{ application_path }}
user = {{ application_user }}
stdout_logfile = {{ celery_log_file }}
environment=PATH="{{ virtualenv_path }}/bin:%(ENV_PATH)s"
redirect_stderr = true

[program:{{ application_name }}-periodic-worker]
command = {{ virtualenv_path }}/bin/celery  -A pouta_blueprints.tasks beat -s {{ runtime_path }}/celerybeat-schedule --pidfile {{ runtime_path }}/celerybeat.pid -f {{ celerybeat_log_file }}
directory = {{ application_path }}
user = {{ application_user }}
redirect_stderr = true
